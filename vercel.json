{
  "version": 2,
  "regions": ["iad1"],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_OPTIONS": "--legacy-peer-deps"
    }
  }
}